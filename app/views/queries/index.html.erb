      <% @top_queries.each do |query| %>
       <div class="questions-container">


        <p class="question-topic" id="main-questions-page"><%= query.topic %></p>

        <h2 class="question-title" id="main-questions-page"><%= query.question%></h2>

        <div class="question-submission-info" id="main-questions-page">

            <a href="/users/individual/<%=query.user_id%>" class="question-submission-info-item">Submitted by <strong><%= User.find(query.user_id).first_name%></strong> <img src = "<%=User.find(query.user_id).avatar.thumb.url%>"></a>

            <p class="question-submission-info-item">Submitted <%=query.created_at %></p>

        </div>


      <div class="answer-container" id="main-answers-page">

          <p id="top-answer">Top Answer</p>

            <% @top_answer = Answer.where(query_id: query.id).order(upvotes: :desc).limit(1)  %>
            <% @top_answer.each do |a|%>
              <a href="#" class="answer">
                  <%= a.content %>
              </a>

              <div class="answer-submission-info">

                <a href="/users/individual/<%=a.user_id%>" class="answer-submission-info-item">Submitted by <strong> <img src = "<%=User.find(a.user_id).avatar.thumb.url%>"/> 

                  <%=User.find(a.user_id).first_name%>
                  
                  <% if User.find(a.user_id).lawyer? %>

                    <img src = "/affirmed.png" style="height: 30px; width: 30px"/>

                  <% end %> 

                </strong></a>

              </div>
             <% end %> 

          <div class="button" id="seemore">See More</div>

          <div class="divider-horizontal"></div>


        </div>

      </div>

      <% end %>


