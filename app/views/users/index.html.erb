<% if current_user.lawyer? %>
	<div class="lawyer-display">
	<p> LAWYER PROFILE</p>
	<div>
			<a href = "/users/<%=current_user.id%>/edit"> Update Profile </a>

	</div>
	<h2> <%= current_user.first_name %> <%= current_user.last_name %> </h2>
	<br/>
	<img src = "<%=current_user.avatar%>">
	<br/><br/><br/><br/>
	<p> <%= current_user.description %> </p>
	<br/><hr/>

	<div> <h3> Background </h3>
	<br/>
	<p> Education: <%= current_user.education %> </p>
	<p> Specialisation: <%= current_user.type_of_lawyer %> </p>
	<p> Contact: <%= current_user.email %></p>
	<p> Birthday: <%= current_user.birthday%></p>
	<p> Certificates: <img src= "<%=current_user.proof%>"> </p>
	<br/>
	</div>

	<br/><br/>

		<% if Article.find_by(user_id: current_user.id) != nil %>
			<div>
			<h4>Your Lawyerly Articles</h4>
			<br/>
			<% @articles.each do |x| %>
				<strong><a href="/articles/<%=x.id%>"> <%= x.title %> </a></strong>
				<br/>
			<% end %>
			</div>
		<% end %>
	</div>

<% elsif current_user.user? || current_user.superadmin? %>
	<div class="user-display">
		<p> USER PROFILE </p>
		<div>
			
			<a href = "/users/<%=current_user.id%>/edit"> Update Profile </a>

	</div>
		<h2> <%= current_user.first_name%> <%= current_user.last_name%> </h2>
		<br/>
		<img src = "<%=current_user.avatar%>">
		<br/><br/><br/><hr/>
		<p> Email: <%= current_user.email %></p>
		<p> Birthday: <%= current_user.birthday %></p>
		<p> Working In: <%= current_user.industry %></p>

	</div>

<% end %>