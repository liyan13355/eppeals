<div class="sign-up-container">


	<h1>Sign Up</h1>


	<div class="tabs-container">


		<div class="tab" id="user-signup-tab">

			<p>User sign up</p>


		</div>

		<div class="tab" id="lawyer-signup-tab">

			<p>Lawyer sign up</p>

		</div>


	</div>




<div id="user-form" class="form-box">
<!--   <h3>Sign up </h3> -->

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form_user', locals: {form: form} %>



    <div class="signup-link">

    <div class="divider-horizontal" id="partial"></div>

      <%= link_to t(".sign_in_instead"), sign_in_path, :class => 'navbar-tag', :id => 'signup-link' %>


     <div class="divider-horizontal" id="partial"></div>

 </div>

 
  <% end %>
</div>

<div id="lawyer-form" class="form-box">
  <h4>Sign up for a lawyer account</h4>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form_lawyer', locals: {form: form} %>


    <div class="signup-link">

    	<div class="divider-horizontal" id="partial"></div>

      	<%= link_to t(".sign_in_instead"), sign_in_path, :class => 'navbar-tag', :id => 'signup-link' %>

        <div class="divider-horizontal" id="partial"></div>

    </div>
 
  <% end %>
</div>


</div>

<script>

	$("#lawyer-form").hide();


	$("#lawyer-signup-tab").on("click", function(e){

		$("#lawyer-form").show();
		$("#user-form").hide();
		$("#user-signup-tab").css('background-color', '#9d9eb0');
		$("#lawyer-signup-tab").css('background-color', '#6c738d');

	});

	$("#user-signup-tab").on("click", function(e){

		$("#lawyer-form").hide();
		$("#user-form").show();
		$("#user-signup-tab").css('background-color', '#6c738d');
		$("#lawyer-signup-tab").css('background-color', '#9d9eb0');

	});

</script>