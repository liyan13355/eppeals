<h1>Article</h1>

<h3 class= "author"> 
	
		<img src="<%= @author.avatar.thumb.url %>">

	By 
	<strong> <a href="/users/individual/<%=@author.id%>"><%= @author.first_name %> </a></strong>
	<%= @author.last_name %>
</h3>

<% if signed_in? && current_user.id == @author.id %>
	<a href = "/articles/<%=@article.id%>/edit"> Update Article </a>

	<%= form_tag("/articles/#{@article.id}", method: :delete) do %>
	    			<input type="submit" value="Delete Article" />
	<% end %>   
<%end%>


<h1 class= "title">
<%= @article.title %>
</h1>

<p class="date">
	Submitted <%= time_ago_in_words(@article.created_at) %> ago
</p>

<p class="content">
	<%= @article.content %>
</p>

<p class="tag">
	Tag: <%= @article.tag %>
</p>

<hr/><br/><br/>

<% if signed_in? %>
<div> 
	<h4>Post a comment</h4>
</div>

<!-- this is naturally hidden until the div above is clicked --> 
<div>
<%= form_for [@article, @comment] do |f| %>
<p>
		<%= f.label :content %><br/> 
		<%= f.text_field :content %><br/>

		<% f.hidden_field :user_id, :value => current_user.id %>
		<% f.hidden_field :article_id, :value => @article.id %>

	</p>
	<p> 		<%= f.submit %> </p>

<% end %>
</div>
<% end %>

<!-- Comments Section starts here -->
<div>
<h1>Comments</h1>
<hr/>
<% @comments.each do |comment|%>
<h5 class= "User">
<a href="http://localhost:3000/users/individual/<%=comment.user_id%>"><%= User.find(comment.user_id).first_name %></a>
</h5>

<p class="date">
	Submitted <%= time_ago_in_words(comment.created_at) %> ago
</p>

<p class="content">
	<%= comment.content %>
</p>
<hr/>
<% end %>

</div>
