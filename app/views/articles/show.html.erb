<h1>Article</h1>

<h3 class= "author"> 
	
		<img src="<%= @author.avatar.thumb.url %>">

	By 
	<strong> <a href="http://localhost:3000/users/<%=@author.id%>"><%= @author.first_name %> </a></strong>
	<%= @author.last_name %>
</h3>

<% if current_user.id == @author.id %>
	<a href = "http://localhost:3000/articles/<%=@article.id%>/edit"> Update Article </a>

	<%= form_tag("/articles/#{@article.id}", method: :delete) do %>
	    			<input type="submit" value="Delete Article" />
	<% end %>   
<%end%>

<h1 class= "title">
<%= @article.title %>
</h1>

<p class="date">
	Submitted <%= time_ago_in_words(@article.created_at) %> ago
</p>

<p class="content">
	<%= @article.content %>
</p>

<p class="tag">
	Tag: <%= @article.tag %>
</p>