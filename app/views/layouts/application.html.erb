<!DOCTYPE html>
<html>
  <head>
    <title>Eppeals</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if signed_in? %>
        <a> <%= link_to t(".sign_out"), sign_out_path, method: :delete %></a>
            <% else %>
              <a><%= link_to t(".sign_in"), sign_in_path %></a>
            <% end %>

    <%= yield %>
  </body>
</html>
